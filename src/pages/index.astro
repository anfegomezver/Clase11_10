---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
    <div class="my-custom-class">asdas</div>
    <Icon name="mdi:upload-outline" size="56" class="text-lime-400" />
    <Icon name="eos-icons:compass" />
    <span class="font-myfont italic"> Hola mucasfdas </span>

    <div id="x">Hola</div>

    <div class="embla">
        <div class="embla__container">
            <div class="embla__slide">Slide 1</div>
            <div class="embla__slide">Slide 2</div>
            <div class="embla__slide">Slide 3</div>
        </div>
    </div>
</Layout>

<style>
    .my-custom-class {
        @apply bg-orange-400 text-white text-2xl;
    }

    .embla {
        overflow: hidden;
    }
    .embla__container {
        display: flex;
    }
    .embla__slide {
        flex: 0 0 100%;
        min-width: 0;
    }
</style>
<script>
    import JSConfetti from "js-confetti";

    const jsConfetti = new JSConfetti();

    const element = document.getElementById("x");
    element.addEventListener("click", (e) => {
        console.log(e.target);
        jsConfetti.addConfetti();
    });

    import EmblaCarousel from "embla-carousel";
    import Autoplay from "embla-carousel-autoplay";

    const emblaNode = document.querySelector(".embla");
    const options = { loop: false };
    const plugins = [Autoplay()];
    const emblaApi = EmblaCarousel(emblaNode, options, plugins);
</script>
